# Prerequisites:
# cakey.pem - private key generated from the first ex
# cacertificate_pubkey.epm - public key extracted from first ex
# grade.txt - different mark that works with sign (generated by collision)


generate_forged_sign:
	openssl dgst -md5 -sign cakey.pem -out grade_forged.sign grade.txt

verify_signature:
	openssl dgst -md5 -verify cacertificate_pubkey.pem -signature grade_forged.sign grade_forged.txt
